    .sidenav {
      height: 100%;
      width: 0;
      position: fixed;
      z-index: 1;
      top: 0;
      left: 0;
      background-color: #1D2C4A;
      overflow-x: hidden;
      transition: 0.5s;
      padding-top: 60px;
    }

    .sidenav a {
      padding: 8px 8px 8px 32px;
      text-decoration: none;
      font-size: 25px;
      color: white;
      display: block;
      transition: 0.3s;
    }

    .sidenav a:hover {
      color: #f1f1f1;
    }

    .sidenav .closebtn {
      position: absolute;
      top: 0;
      right: 25px;
      font-size: 36px;
      margin-left: 50px;
    }
    .header{
      background-color: #1D2C4A;
      height:120px;
      padding: 15px;
    }
    h2{
      font-family: ITMO Muller Black;
      color: white;
    }
    h3{
      font-family: ITMO Muller Black;
      margin-left: 30px;
    }
    .content{
      height:100%;
      width: auto;
      padding:15px;
      padding-left:30px;
    }
    .footer{
      position: fixed;
      left: 0;
      bottom: 0;
      width: 100%;
      height:30px;
      background-color: #1D2C4A;

    }
    .info{
      height:50px;
      width: auto;
    }
    .main_table{
      width: auto;
      height:270px;

    }
    a,p{

      color: black;
    }
    td{
      padding-right: 35px;
    }

    a:hover{
      color:#1D2C4A;
    }
    i{
      font-size: 25px;
    }



    @media screen and (max-height: 450px) {
      .sidenav {padding-top: 15px;}
      .sidenav a {font-size: 18px;}
    }
  </style>
